          <div class="card-div">
              <img alt="test-image" src="/stock photos/@ImgInstance.ImgName" class="card-div-image"><hr><!--has a bottom border-->
              <div class="card-div-image-description">@ImgInstance.Name</div>
              <div class="card-div-title">Price :<div class="card-div-amount">@ImgInstance.Price</div></div><!--has a bottom border-->
              <form asp-action="Order" method="Post" asp-route-ItemRealName="@ImgInstance.ImgName" asp-route-price="@ImgInstance.Price" asp-route-ItemName="@ImgInstance.Name">
              <div><button class="card-div-functionality" type="submit" >Order</button></div>
              </form>
              <form class="CartForm" method="Post">
                <input type="text" class="InputVisibility" value="@ImgInstance.ImgName" name="ImgName">
