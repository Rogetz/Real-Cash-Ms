@model ImageClass;

@{
    ViewData["Title"] = "Order Page";
}
<main >
    <div class="container-div ">
        <div class="card">
          <img alt="test-image" src="/stock photos/@Model.ImgName" class="card-div-image"><hr><!--has a bottom border-->
          <div class="card-div-image-description">@Model.Name</div>
          <div class="card-div-title">Total Price :<div class="card-div-amount">$ @Model.Price</div></div><!--has a bottom border-->
          <div><button class="card-div-functionality"  data-bs-toggle="modal" data-bs-target="#staticBackdrop" >Pay</button></div>
        </div>
        <div class="">
            <p ><h1 class="text-center"><b>Description</b> </h1></p>
                <h1 class="card-text text-primary">Details of @Model.Name</h1><hr>
                <p class="card-text text-dark">This particluar breed is bred in india
                The best in the world.Its just the best in the world.
